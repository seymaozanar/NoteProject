@model NoteProject.Models.TblUser
@{
    ViewBag.Title = "User Registration";
}

<h2>User Registration</h2>


@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        <div class="w3l-form-group">
            <label>Username:</label>
            <div class="group">
                <i class="fas fa-user"></i>
                <input type="text" name="UserName" id="UserName" class="form-control" placeholder="Username" required="required" />
            </div>
        </div>
        <div class=" w3l-form-group">
            <label>Password:</label>
            <div class="group">
                <i class="fas fa-unlock"></i>
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" required="required" />
            </div>
        </div>


        <br><br />

        <div class=" w3l-form-group">
          
          <input type="submit" value="Submit" class="btn btn-default" />
          
        </div>
        <div class=" w3l-form-group">
            
                <label class=" label-success">@ViewBag.SuccessMessage</label>
           
        </div>
        <div class=" w3l-form-group">
        
                <label class=" label-success">@ViewBag.DuplicateMessage</label>
          
        </div>

    }


</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}